@model IEnumerable<Prestamos>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo Prestamo", "Create")
</p>
<table class="table table-dark table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdPrestamo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdLibro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdUsuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FecPrestamo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FecDevolucion)
        </th>
        <th>
            Acciones
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPrestamo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdLibro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FecPrestamo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FecDevolucion)
            </td>
            <td>
                <button class="btn btn-warning link-light">
                    @Html.ActionLink("Editar", "Edit", new { id = item.IdPrestamo })
                </button>                
                <button class="btn btn-danger link-light">
                    @Html.ActionLink("Borrar", "Delete", new { id = item.IdPrestamo })
                </button>                
            </td>
        </tr>
    }
</table>